<div class="page-theme">
  <h1><%= @song.title %></h1>
  <h4>Mood: <%= @song.mood %></h4>
  <h4>Message: <%= @song.message %></h4>

  <section class="container-fluid">
    <% if !@song.sections.any? %>
      <p>
        To add lyrics, you'll need to
        <%= link_to 'create a song section', new_section_path %>.
      </p>
    <% else %>
      <% @song.sections.each do |section| %>
        <section class="song-section-content">
          <section class="song-section-label">
            <p><%= section.section_type %> - <%= section.label %></p>
          </section>
          <%= link_to "Edit this section", edit_section_path(section) %>
          <p><%= section.chords %></p>
          <p><%= section.lyrics %></p>
        </section>
      <% end %>
    <% end %>
  </section>
