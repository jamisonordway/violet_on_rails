<h1>Create a new Freewriting entry</h1>
<p>
  Aim for 10 - 30 minutes of stream-of-consciousness writing each day.
  Don't edit anything that you write here!
</p>

<%= form_with model: @freewrite, local: true, class: 'form-control' do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <div><%= f.text_field :title, class: 'form-control form-control-sm' %></div>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <div><%= f.text_field :description, class: 'form-control form-control-sm' %></div>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <div><%= f.text_field :body, class: 'form-control form-control-lg' %></div>
  </div>
  <%= f.submit "Save", class: 'btn btn-dark' %>
<% end %>
